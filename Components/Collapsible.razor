<button type="button" class=@Class @onclick=Toggle>
	@Text
</button>
@if(!Display)
{
	@ChildContent
}

@code {
	[Parameter]
	public RenderFragment ChildContent { get; set; }

	[Parameter]
	public string Text { get; set; }

	[Parameter]
	public string CollapsedClass { get; set; }

	[Parameter]
	public string UncollapsedClass { get; set; }

	[Parameter]
	public bool Collapsed { get; set; }

	bool Display;

	void Toggle()
	{
		Display = !Display;
	}

	string Class => Display ? CollapsedClass : UncollapsedClass;

	protected override void OnInitialized()
	{
		Display = Collapsed;
		base.OnInitialized();
	}
}
