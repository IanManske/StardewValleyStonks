<button class=@ButtonClass @onclick=@( () => Toggle() )>
	@ChildContent
</button>

@code {
	[Parameter]
	public RenderFragment ChildContent { get; set; }

	[Parameter]
	public string UntoggledClass { get; set; }

	[Parameter]
	public string ToggledClass { get; set; }

	[Parameter]
	public bool Toggled { get; set; }

	[Parameter]
	public EventCallback<bool> ToggledChanged { get; set; }

	public void Toggle()
	{
		Toggled = !Toggled;
	}

	public string ButtonClass => Toggled ? ToggledClass : UntoggledClass;
}
