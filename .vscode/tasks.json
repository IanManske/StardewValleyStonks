{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Watch",
      "command": "pnpm",
      "args": [ "watch" ],
      "type": "shell",
      "group": "build",
      "isBackground": true,
      "problemMatcher": {
        "fileLocation": "absolute",
        "background": {
          "beginsPattern": ".* Building .*",
          "endsPattern": "âœ¨ Built in .*",
          "activeOnStart": true
        },
        "pattern": {
          "regexp": "^ðŸš¨ Build failed$",
        }
      },
      "dependsOn": [ "Pandoc Watch", "Fable Watch" ]
    },
    {
      "label": "Watch JS",
      "command": "pnpm",
      "args": [ "watch" ],
      "type": "shell",
      "group": "build",
      "isBackground": true,
      "problemMatcher": {
        "fileLocation": "absolute",
        "background": {
          "beginsPattern": ".* Building .*",
          "endsPattern": "âœ¨ Built in .*",
          "activeOnStart": true
        },
        "pattern": {
          "regexp": "^ðŸš¨ Build failed$",
        }
      },
      "dependsOn": [ "Fable Watch" ]
    },
    {
      "label": "Fable Watch",
      "command": "pnpm",
      "args": [ "watch:fable" ],
      "type": "shell",
      "group": "build",
      "isBackground": true,
      "problemMatcher": [
        {
          "fileLocation": "relative",
          "background": {
            "beginsPattern": "Started Fable compilation",
            "endsPattern": "Fable compilation finished in .*",
            "activeOnStart": true
          },
          "pattern": {
            "regexp": "^(.*)\\((\\d+,\\d+)\\): (warning|error) FABLE: (.*)$",
            "file": 1,
            "location": 2,
            "severity": 3,
            "message": 4
          }
        },
        {
          "fileLocation": "relative",
          "background": {
            "beginsPattern": "Started Fable compilation",
            "endsPattern": "Fable compilation finished in .*",
            "activeOnStart": true
          },
          "pattern": {
            "regexp": "^(.*)\\((\\d+),(\\d+)\\): \\((\\d+),(\\d+)\\) (warning|error) FABLE: (.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "endLine": 4,
            "endColumn": 5,
            "severity": 6,
            "message": 7
          }
        }
      ]
    },
    {
      "label": "Pandoc Watch",
      "command": "pnpm",
      "args": [ "watch:pandoc" ],
      "type": "shell",
      "group": "build",
      "isBackground": true,
      "problemMatcher": {
        "background": {
          "beginsPattern": "(add)|(change):.*",
          "endsPattern": "^$",
          "activeOnStart": false
        },
        "pattern": {
          "regexp": "\\[WARNING\\] .*",
        }
      }
    },
    {
      "label": "Build Extractor",
      "command": "dotnet",
      "args": [ "build" ],
      "type": "process",
      "options": {
        "cwd": "${workspaceFolder}/src/Extractor"
      },
      "problemMatcher": "$msCompile"
    }
  ]
}
