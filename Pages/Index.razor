@page "/"
@inject NavigationManager Nav
@inject DateState  Date
@inject SkillsState  Skills
@inject SettingsState  Settings

<div class="input-grid">
	<div class="editor">
		<TabGroup TabClass="editor-tab" SelectedTabClass="editor-tab">
			<select class="preset-selector">
				<option disabled selected value="">Apply a data preset...</option>
				<option value="Year 1" class="preset-option">Year 1</option>
				<option value="Year 2+" class="preset-option">Year 2+</option>
			</select>
			<Tab Name="Crop">
				<table class="data-table">
					<tr>
						<th></th>
						<th>Image and Name</th>
						<th>Seed Price and Source</th>
					</tr>
					<tr>
						<td><label class="entry-checkbox-label"><input type="checkbox" class="entry-checkbox" checked><span class="entry-checkbox-background"></span></label></td>
						<td>Image and Name</td>
						<td>
							<select class="source-selector">
								<option value="Pierre" class="source-option">Pierre</option>
								<option value="Jojo" class="source-option">Jojo</option>
								<option value="Oasis" class="source-option">Oasis</option>
							</select>
							<label class="lock-checkbox-label"><input type="checkbox" class="lock-checkbox"><span class="lock-checkbox-background"></span></label>
						</td>
					</tr>
				</table>
			</Tab>
			<Tab Name="Fertilizer">
				<table class="data-table">
					<tr>
						<th></th>
						<th>Image and Name</th>
						<th>Price and Source</th>
					</tr>
					<tr>
						<td><label class="entry-checkbox-label"><input type="checkbox" class="entry-checkbox" checked><span class="entry-checkbox-background"></span></label></td>
						<td>Image and Name</td>
						<td>
							<select class="source-selector">
								<option value="Pierre" class="source-option">Pierre</option>
								<option value="Jojo" class="source-option">Jojo</option>
								<option value="Oasis" class="source-option">Oasis</option>
							</select>
							<label class="lock-checkbox-label"><input type="checkbox" class="lock-checkbox"><span class="lock-checkbox-background"></span></label>
						</td>
					</tr>
				</table>
			</Tab>
		</TabGroup>
	</div>

	<!-- right side -->
	<div class="top-row">
		<button class="switch-input-mode">
			Adv. Mode
		</button>
		<button class="switch-calc-mode">
			Greenhouse Mode
		</button>
		<select class="preset-selector">
			<option disabled selected value="">Apply a settings preset...</option>
			<option value="Level 0" class="preset-option">Farming Level 0</option>
			<option value="Level 1-2" class="preset-option">Farming Level 1-2</option>
			<option value="Level 3" class="preset-option">Farming Level 3</option>
			<option value="Level 4" class="preset-option">Farming Level 4</option>
			<option value="Level 5-7" class="preset-option">Farming Level 5-7 (Tiller)</option>
			<option value="Level 8" class="preset-option">Farming Level 8</option>
			<option value="Level 9" class="preset-option">Farming Level 9</option>
			<option value="Level 10 Agri" class="preset-option">Farming Level 10, Agriculturist</option>
			<option value="Level 10 Arti" class="preset-option">Farming Level 10, Artisan</option>
		</select>
	</div>
	<div class="skills">
		<span class="input-header">Skills</span>
		<br>
		<label for="farming-lvl" class="input-label">Farming Level:</label>
		<input type="number" class="number-input" min="0" max="10" id="farming-lvl" @bind=Skills.FarmLvl>
		<br>
		<label class="skills-checkbox-label"><input type="checkbox" class="skills-checkbox" @bind=Skills.Till><span class="skills-checkbox-background"></span></label>
		<br>
		<label class="skills-checkbox-label"><input type="checkbox" class="skills-checkbox" @bind=Skills.Agri><span class="skills-checkbox-background"></span></label>
		<label class="skills-checkbox-label"><input type="checkbox" class="skills-checkbox" @bind=Skills.Arti><span class="skills-checkbox-background"></span></label>
	</div>
	<div class="products">
		<span class="input-header">Sell</span>
		<label class="input-checkbox-label">Raw Crop<input type="checkbox" class="input-checkbox"><span class="input-checkbox-background"></span></label>
		<label class="input-checkbox-label">Preserves Jar<input type="checkbox" class="input-checkbox"><span class="input-checkbox-background"></span></label>
		<label class="input-checkbox-label">Keg<input type="checkbox" class="input-checkbox"><span class="input-checkbox-background"></span></label>
		<label class="input-checkbox-label">Oil Maker<input type="checkbox" class="input-checkbox"><span class="input-checkbox-background"></span></label>
		<label class="input-checkbox-label">Mill<input type="checkbox" class="input-checkbox"><span class="input-checkbox-background"></span></label>
	</div>
	<div class="sources">
		<span class="input-header">Sources</span>
		<label class="input-checkbox-label">Pierre<input type="checkbox" class="input-checkbox"><span class="input-checkbox-background"></span></label>
		<label class="input-checkbox-label">Jojo<input type="checkbox" class="input-checkbox"><span class="input-checkbox-background"></span></label>
		<label class="input-checkbox-label">Oasis<input type="checkbox" class="input-checkbox"><span class="input-checkbox-background"></span></label>
		<label class="input-checkbox-label">Traveling Merchant<input type="checkbox" class="input-checkbox"><span class="input-checkbox-background"></span></label>
		<label class="input-checkbox-label">Crafting<input type="checkbox" class="input-checkbox"><span class="input-checkbox-background"></span></label>
		<label class="input-checkbox-label">Free<input type="checkbox" class="input-checkbox"><span class="input-checkbox-background"></span></label>
	</div>
	<div class="replant">
		<span class="input-header">Replant</span>
		<label class="input-checkbox-label">Buy Seeds<input type="checkbox" class="input-checkbox"><span class="input-checkbox-background"></span></label>
		<label class="input-checkbox-label">Seed Maker<input type="checkbox" class="input-checkbox"><span class="input-checkbox-background"></span></label>
		<label class="input-checkbox-label">Replant Crop<input type="checkbox" class="input-checkbox"><span class="input-checkbox-background"></span></label>
	</div>
	<div class="non-greenhouse-settings">
		<label class="input-header">
			Start Date:
			<select class="season-selector" @bind=Date.StartSeason>
				<option selected value="1">Spring</option>
				<option value="2">Summer</option>
				<option value="3">Fall</option>
				<option value="4">Winter</option>
			</select>
			<input type="number" min="1" max="28" id="farming-lvl" @bind=Date.StartDay>
		</label>
		<label class="input-header">
			End Date:
			<select class="season-selector" @bind=Date.EndSeason>
				<option value="1">Spring</option>
				<option value="2">Summer</option>
				<option selected value="3">Fall</option>
				<option value="4">Winter</option>
			</select>
			<input type="number" min="1" max="28" id="farming-lvl" @bind=Date.EndDay>
		</label>
	</div>
	<div class="bottom-row">
		<button class="switch-input-output" @onclick="@(() => Nav.NavigateTo("adv_input"))">
			Back to Plans
		</button>
		<button class="calc-button" @onclick="Calc">
			Calculate New Plans
		</button>
		<button class="help-button" @onclick="@(() => Nav.NavigateTo("help"))">
			Help
		</button>
	</div>
</div>
